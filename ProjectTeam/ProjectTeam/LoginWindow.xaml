<Window x:Class="ProjectTeam.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectTeam"
        mc:Ignorable="d"
        Title="VinFast Battery Swap - Đăng nhập" 
        Height="650" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F0F0F5">
    <Grid>
        <Border Background="White" 
                Margin="35,30,35,30" 
                CornerRadius="10">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="2" Opacity="0.3"/>
            </Border.Effect>

            <StackPanel Margin="40">
                <!-- Logo -->
                <Border Width="100" Height="100" 
                        Background="#0066CC" 
                        CornerRadius="50"
                        Margin="0,20,0,20">
                    <TextBlock Text="VF" 
                               FontSize="36" 
                               FontWeight="Bold" 
                               Foreground="White"
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"/>
                </Border>

                <!-- Title -->
                <TextBlock Text="VINFAST BATTERY SWAP" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="#0066CC"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,5"/>

                <TextBlock Text="Hệ thống quản lý thay pin" 
                           FontSize="13" 
                           Foreground="Gray"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,35"/>

                <!-- Email -->
                <TextBlock Text="Email:" 
                           FontWeight="Bold" 
                           FontSize="13"
                           Margin="0,0,0,8"/>
                <Border BorderBrush="#CCC" BorderThickness="1" CornerRadius="5">
                    <TextBox x:Name="txtEmail" 
                             Height="45" 
                             FontSize="14"
                             Padding="15,0"
                             BorderThickness="0"
                             VerticalContentAlignment="Center"
                             Text="staff1@vinfast.com"/>
                </Border>

                <!-- Password -->
                <TextBlock Text="Mật khẩu:" 
                           FontWeight="Bold" 
                           FontSize="13"
                           Margin="0,20,0,8"/>
                <Border BorderBrush="#CCC" BorderThickness="1" CornerRadius="5">
                    <PasswordBox x:Name="txtPassword" 
                                 Height="45" 
                                 FontSize="14"
                                 Padding="15,0"
                                 BorderThickness="0"
                                 VerticalContentAlignment="Center"
                                 />
                </Border>

                <!-- Login Button -->
                <Button x:Name="btnLogin" 
                        Content="ĐĂNG NHẬP" 
                        Style="{StaticResource ModernButton}"
                        Height="50"
                        FontSize="15"
                        Margin="0,30,0,0"
                        Click="BtnLogin_Click"/>

                <!-- Quick Login -->
                <TextBlock Text="Đăng nhập nhanh:" 
                           FontSize="12" 
                           Foreground="Gray"
                           HorizontalAlignment="Center"
                           Margin="0,25,0,10"/>

                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center">
                    <Button Content="👨‍💼 Staff" 
                            Width="130" 
                            Height="40"
                            Background="#28A745"
                            Foreground="White"
                            BorderThickness="0"
                            FontWeight="Bold"
                            FontSize="13"
                            Cursor="Hand"
                            Margin="0,0,10,0"
                            />
                    <Button Content="🚗 Driver" 
                            Width="130" 
                            Height="40"
                            Background="#FFC107"
                            Foreground="White"
                            BorderThickness="0"
                            FontWeight="Bold"
                            FontSize="13"
                            Cursor="Hand"
                            />
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
