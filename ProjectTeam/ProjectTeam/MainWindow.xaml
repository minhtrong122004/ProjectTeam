<Window x:Class="ProjectTeam.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectTeam"
        mc:Ignorable="d"
        Title="VinFast Battery Swap System" 
        Height="750" Width="1300"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#0066CC">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="25,0">
                    <TextBlock Text="⚡" 
                               FontSize="28" 
                               Foreground="White"
                               Margin="0,0,10,0"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="VinFast Battery Swap System" 
                               FontSize="22" 
                               FontWeight="Bold" 
                               Foreground="White"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center" 
                            Margin="25,0">
                    <Border Background="#0052A3" 
                            CornerRadius="5" 
                            Padding="15,8" 
                            Margin="0,0,15,0">
                        <TextBlock x:Name="txtUserInfo" 
                                   FontSize="14" 
                                   Foreground="White"
                                   VerticalAlignment="Center"/>
                    </Border>
                    <Button Content="🚪 Đăng xuất" 
                            Width="130" 
                            Height="40"
                            Background="#DC3545"
                            Foreground="White"
                            BorderThickness="0"
                            FontWeight="Bold"
                            FontSize="14"
                            Cursor="Hand"
                            Click="BtnLogout_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        CornerRadius="5" 
                                        Padding="15,8">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar -->
            <Border Grid.Column="0" 
                    Background="#F8F9FA" 
                    BorderBrush="#DEE2E6" 
                    BorderThickness="0,0,1,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="sidebarMenu" Margin="0,15,0,0"/>
                </ScrollViewer>
            </Border>

            <!-- Content Area -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Toolbar -->
                <Border Grid.Row="0" 
                        Background="White" 
                        BorderBrush="#DEE2E6" 
                        BorderThickness="0,0,0,1" 
                        Padding="25,15">
                    <WrapPanel>
                        <Border BorderBrush="#CCC" BorderThickness="1" CornerRadius="5" Margin="0,0,10,0">
                            <TextBox x:Name="txtSearch" 
                                     Width="300" 
                                     Height="40"
                                     FontSize="14"
                                     VerticalContentAlignment="Center"
                                     Padding="15,0"
                                     BorderThickness="0"
                                     Text="Tìm kiếm..."/>
                        </Border>
                        <Button Content="🔍 Tìm kiếm" 
                                Width="110" 
                                Height="40"
                                Margin="0,0,10,0"
                                Background="#0066CC"
                                Foreground="White"
                                BorderThickness="0"
                                FontWeight="Bold"
                                FontSize="13"
                                Cursor="Hand"
                                Click="BtnSearch_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="5" Padding="15,8">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        <Button x:Name="btnAdd"
                                Content="➕ Thêm mới" 
                                Width="130" 
                                Height="40"
                                Margin="0,0,10,0"
                                Background="#28A745"
                                Foreground="White"
                                BorderThickness="0"
                                FontWeight="Bold"
                                FontSize="13"
                                Cursor="Hand"
                                Click="BtnAdd_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="5" Padding="15,8">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        <Button Content="🔄 Làm mới" 
                                Width="120" 
                                Height="40"
                                Background="#6C757D"
                                Foreground="White"
                                BorderThickness="0"
                                FontWeight="Bold"
                                FontSize="13"
                                Cursor="Hand"
                                Click="BtnRefresh_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="5" Padding="15,8">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </WrapPanel>
                </Border>

                <!-- Data Grid -->
                <DataGrid x:Name="dataGrid" 
                          Grid.Row="1"
                          Margin="25"
                          AutoGenerateColumns="True"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          RowHeight="45"
                          AlternatingRowBackground="#F8F9FA"
                          MouseDoubleClick="DataGrid_MouseDoubleClick">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#0066CC"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="FontSize" Value="13"/>
                            <Setter Property="Padding" Value="12"/>
                            <Setter Property="Height" Value="45"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Padding" Value="12,0"/>
                            <Setter Property="BorderThickness" Value="0"/>
                        </Style>
                    </DataGrid.CellStyle>
                </DataGrid>
            </Grid>
        </Grid>
    </Grid>
</Window>
