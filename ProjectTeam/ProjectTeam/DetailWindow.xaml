<Window x:Class="ProjectTeam.DetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectTeam"
        mc:Ignorable="d"
        Title="Chi tiết" 
        Height="600" Width="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F0F0F5">
    <Grid>
        <Border Background="White" 
                Margin="20" 
                CornerRadius="10"
                Padding="30">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" ShadowDepth="2" Opacity="0.2"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Title -->
                <StackPanel Grid.Row="0" Margin="0,0,0,25">
                    <TextBlock x:Name="txtTitle" 
                               Text="Chi tiết thông tin" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="#0066CC"/>
                    <Border Height="3" 
                            Background="#0066CC" 
                            CornerRadius="2" 
                            Margin="0,10,0,0"
                            Width="100"
                            HorizontalAlignment="Left"/>
                </StackPanel>

                <!-- Form Content -->
                <ScrollViewer Grid.Row="1" 
                              VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="formPanel" 
                                Margin="0,0,0,20"/>
                </ScrollViewer>

                <!-- Buttons -->
                <StackPanel Grid.Row="2" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Right"
                            Margin="0,20,0,0">
                    <Button x:Name="btnSave"
                            Content="💾 Lưu" 
                            Width="120" 
                            Height="45"
                            Background="#28A745"
                            Foreground="White"
                            BorderThickness="0"
                            FontWeight="Bold"
                            FontSize="14"
                            Cursor="Hand"
                            Margin="0,0,10,0"
                            Click="BtnSave_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        CornerRadius="5" Padding="15,8">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button x:Name="btnDelete"
                            Content="🗑️ Xóa" 
                            Width="120" 
                            Height="45"
                            Background="#DC3545"
                            Foreground="White"
                            BorderThickness="0"
                            FontWeight="Bold"
                            FontSize="14"
                            Cursor="Hand"
                            Margin="0,0,10,0"
                            Click="BtnDelete_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        CornerRadius="5" Padding="15,8">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button Content="❌ Đóng" 
                            Width="120" 
                            Height="45"
                            Background="#6C757D"
                            Foreground="White"
                            BorderThickness="0"
                            FontWeight="Bold"
                            FontSize="14"
                            Cursor="Hand"
                            Click="BtnClose_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        CornerRadius="5" Padding="15,8">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
